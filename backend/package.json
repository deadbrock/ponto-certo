{
  "name": "backend",
  "version": "1.0.1",
  "description": "Backend do Sistema Ponto Digital FG Services - Railway Deploy",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:integration": "cross-env NODE_ENV=test jest --testMatch='**/tests/integration/**/*.test.js'",
    "test:unit": "cross-env NODE_ENV=test jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:security": "cross-env NODE_ENV=test jest --testMatch='**/tests/security/**/*.test.js'",
    "pentest": "node security-tests/penetration/runPenTest.js",
    "pentest:local": "node security-tests/penetration/runPenTest.js http://localhost:3333",
    "pentest:prod": "node security-tests/penetration/runPenTest.js https://ponto-digital.railway.app",
    "validate:flows": "node tests/flow-validation/runFlowValidation.js",
    "validate:flows:local": "node tests/flow-validation/runFlowValidation.js http://localhost:3333",
    "validate:flows:prod": "node tests/flow-validation/runFlowValidation.js https://ponto-certo-production.up.railway.app",
    "validate:first-register": "node -e \"const {FirstRegisterValidator} = require('./tests/flow-validation/first-register/FirstRegisterValidator'); new FirstRegisterValidator(process.argv[1] || 'http://localhost:3333').validateCompleteFlow().then(console.log);\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@react-navigation/native": "^7.1.11",
    "@react-navigation/stack": "^7.3.4",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "axios": "^1.11.0",
    "cross-env": "^10.0.0",
    "form-data": "^4.0.4",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
